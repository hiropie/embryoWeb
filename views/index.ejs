<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" integrity="sha384-DyZ88mC6Up2uqS4h/KRgHuoeGwBcD4Ng9SiP4dIRy0EXTlnuz47vAwmeGwVChigm" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1, user-scalable=yes">
  </head>
  <body>
    <div id="capture">
      <div id="buttons">
        <div class="sand"></div>
        <button id="change" class="btn"><i class="fas fa-sync-alt"></i></button>
        <div class="spacer"></div>
        <button id="gifStart" class="btn"><i class="fas fa-play"></i></button>
        <div class="spacer"></div>
        <button id="push" class="btn"><i class="fas fa-spray-can"></i></button>
        <div class="spacer"></div>
        <button id="reload" class="btn"><i class="fas fa-camera"></i></button>
        <div class="sand"></div>
      </div>
      <div id="image">
        <img  src="/images/basis/first.png" id="embryo_gif" width="720" height="480"> 
      </div>
    </div>
    
    <!-- <table id="parameter">
        <tr align="center">
          <th>時間</th>
          <th>気温[℃]</th>
          <th>湿度[%]</th>
        </tr>
        <tr align="center">
          <td id="time">0</td>
          <td id="tmp">0</td>
          <td id="hum">0</td>
        </tr>
    </table> -->

    <div id="graphs">  
      <div class="sand"></div>
      <div id="tmpGraph" class="graph"></div>
      <div class="spacer"></div>
      <div id="humGraph" class="graph"></div>
      <div class="sand"></div>
    </div>

    <div id="loading">
      <div class="spinner"></div>
    </div>

    <script src="/socket.io/socket.io.js"></script>
    <script src="javascripts/highstock.js"></script>
    <script src="https://code.jquery.com/jquery-1.11.1.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.3.0/socket.io.js"></script>
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"
        integrity="sha256-pasqAKBDmFT4eHoN2ndd6lN370kFiGUFyTiUHWhU7k8="
        crossorigin="anonymous"></script>
    <script src="javascripts/web-socket.js"></script>
    <script>
      var accessCount = 1;
      window.onload = ()=>{
        setTimeout(()=>{
          const spinner = document.getElementById('loading');
          spinner.classList.add('loaded');
        },1000);
      };
      
      $('#gifStart').on('click', function(){
        nowSrc = $('img').attr('src');
        $('img').attr('src', nowSrc);
      });
    </script>
  </body>
</html>